@model OdontoFacil.Models.Views.CreateDentistViewModel

@{
  ViewData["Title"] = "Novo Dentista";
}

<div>
  <div class="page-title">
    <h1>Novo Dentista</h1>
  </div>

  <form id="edit-dentist-form" asp-action="CreateDentist" asp-controller="Dentist" method="post" class="mt-5">
    <div class="form-container">
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control mt-2" placeholder="Digite seu nome completo" />
      </div>

      <div class="form-group">
        <label asp-for="CPF" class="control-label"></label>
        <input asp-for="CPF" class="form-control mt-2" placeholder="Digite seu CPF" />
      </div>

      <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control mt-2" placeholder="Digite seu email" />
        <span asp-validation-for="Email" class="mt-2 text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control mt-1" type="password" placeholder="Digite uma senha" />
        <span asp-validation-for="Password" class="text-white mt-1"></span>
      </div>

      <div class="form-group">
        <label asp-for="CRO" class="control-label"></label>
        <input asp-for="CRO" class="form-control mt-2" placeholder="Digite seu CRO" />
      </div>

      <div class="form-group">
        <input type="submit" value="Criar Dentista" class="create-button" />
      </div>
    </div>
  </form>
</div>
@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }

  <script>
    $(document).ready(function () {
      $("#CPF").inputmask('999.999.999-99');
    });
  </script>
}
